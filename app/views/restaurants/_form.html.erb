<%= form_for @restaurant, html: { multipart: true } do |form| %>

<% if @restaurant.errors.any? %>
  <div id="error_explanation">
    <h2>
    <%= pluralize(@restaurant.errors.count, "error") %> prohibited
    this article from being saved:
    </h2>

    <ul>
      <% @restaurant.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="form-group row">
  <label for="name" class="col-xs-2 col-form-label"><%= form.label :name %></label>
  <div class="col-xs-10" id="name">
    <%= form.text_field(:name, class: "form-control", placeholder: "Add name here") %>
  </div>
</div>

<div class="form-group row">
  <label for="address" class="col-xs-2 col-form-label"><%= form.label :address %></label>
  <div class="col-xs-10" id="address">
    <%= form.text_field(:address, class: "form-control", placeholder: "Add address here") %>
  </div>
</div>

<div class="form-group row">
  <label for="description" class="col-xs-2 col-form-label"><%= form.label :description %></label>
  <div class="col-xs-10" id="description">
    <%= form.text_area(:description, rows: 5, class: "form-control", placeholder: "Add your description here") %>
  </div>
</div>


<div class="form-group row">

  <div class="col-xs-10" id="description">
      <%= form.label :image %><br>
      <%= form.file_field :image %>
  </div>
</div>


<%= form.submit(class: "btn btn-primary") %>
<%= link_to "Cancel", restaurants_path %>
<% end %>
