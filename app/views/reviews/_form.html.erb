<%= form_with(model: [ @restaurant, @restaurant.reviews.build]) do |form| %>
 <p>
  <%= form.label :rating %><br>
  <%= form.select :rating, (1..5) %>
 </p>
 <p>
  <%= form.label :review %><br>
  <%= form.text_area(:review) %>
 </p>
 <p>
  <%= form.submit %>
 </p>
 <p>
 <%= link_to "Cancel", restaurant_path(@restaurant) %>
 </p>
<% end %>
